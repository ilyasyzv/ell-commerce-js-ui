{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
    "types": ["node"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "sourceMap": true,
    "outDir": "dist/esm"
  },
  "include": ["src/**/*", "src/custom.d.ts"],
  "exclude": ["src/stories/**/*"]
}
